{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0",
    "title": "lo-test-task",
    "summary": "LO-test-task API"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/tasks": {
      "post": {
        "summary": "Create a new Task",
        "description": "Create a new Task.",
        "operationId": "post-task",
        "requestBody": {
          "description": "Post the necessary fields for the API to create a new Task.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string"
                  }
                },
                "required": [
                  "title",
                  "description",
                  "status"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "servers": [
          {
            "url": "http://localhost:3000"
          }
        ]
      },
      "get": {
        "summary": "Get tasks by status",
        "description": "Get tasks by status.",
        "operationId": "get-tasks",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "description": "Target tasks status.",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TaskReadDTO"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "servers": [
          {
            "url": "http://localhost:3000"
          }
        ]
      }
    },
    "/tasks/{id}": {
      "get": {
        "summary": "Get task by ID.",
        "description": "Get Task by ID",
        "operationId": "get-tasks-id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskReadDTO"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "servers": [
          {
            "url": "http://localhost:3000"
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "TaskReadDTO": {
        "type": "object",
        "title": "TaskReadDTO",
        "description": "Task read DTO model.",
        "properties": {
          "id": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "created_at",
          "title",
          "description",
          "status"
        ]
      }
    }
  }
}